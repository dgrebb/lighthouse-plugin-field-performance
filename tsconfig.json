{
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true
  },
  "include": ["src", "test"]
}
